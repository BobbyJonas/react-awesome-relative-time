{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "types",
    "typeRoots": ["node_modules/@types", "src/**/*.d.ts", "*.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
